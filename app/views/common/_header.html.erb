<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to "EventLite", root_path, class: "navbar-brand" %>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <% if user_signed_in? %>
        <ul class="nav navbar-nav">
          <li><%= link_to "My Page", user_path(current_user) %></li>
          <li><%= link_to "My Events", events_path  %></li> 
          <li><%= link_to "My Friends", '#'  %></li> 
          <li><%= link_to "Create a Event", new_event_path  %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li class="margin-top">
            <i class="fa fa-user"></i>
            <%= current_user.full_name.present? ? current_user.full_name : current_user.email %>
          </li>
          <li><%= link_to "My Profile", edit_registration_path(current_user) %>
          <li><%= link_to "Signout", destroy_user_session_path, method: :delete %></li>
        </ul>
      <% else %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Sign In", new_user_session_path  %></li>
          <li><%= link_to "Sign Up", new_user_registration_path %></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
