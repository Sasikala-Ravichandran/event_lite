<%= form_for(@event, html: { class: "form-horizontal"}) do |f| %>

  <%= render 'common/errors', obj: @event %>
  <div class="form-group">
    <%=f.label :name, class: "control-label col-sm-2" do %>
      NAME:
    <% end %> 
    <div class="col-sm-10"> 
      <%=f.text_field :name, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%=f.label :start_date, class: "control-label col-sm-2" do %>
      DATE:
    <% end %> 
    <div class="col-sm-10"> 
      <%=f.date_field :start_date, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%=f.label :start_time, class: "control-label col-sm-2" do %>
      TIME:
    <% end %> 
    <div class="col-sm-10"> 
      <%=f.time_field :start_time, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%=f.label :venue, class: "control-label col-sm-2" do %>
      VENUE:
    <% end %> 
    <div class="col-sm-10"> 
      <%=f.text_area :venue, class: "form-control" %>
    </div>
  </div>

  <div class="action">
    <%=f.submit class: "btn btn-info margin_bottom" %>
  </div>

   <div class="action">
    <%= link_to "Back", :back, class: "btn btn-info" %>
  </div>
<% end %>